<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <!-- 标准控制台输出 -->
  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out" />
    <!-- 关闭向catalina.out中输出日志, 避免该日志文件无限增长, 调试时可以将此选项调整为DEBUG 
    <param name="Threshold" value="OFF" />-->
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %r %-5p [%F:%L] : %m%n" />
    </layout>
  </appender>

  <!-- 服务器主日志文件 -->
  <appender name="secondcar" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="Threshold" value="info" />
    <!-- The active file to log to -->
    <param name="file" value="${catalina.home}/logs/secondcar.log" />
    <param name="Append" value="false" /><!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
    <param name="append" value="true" />
    <param name="encoding" value="UTF-8" />
    <layout class="org.apache.log4j.PatternLayout">
      <!-- The log message pattern -->
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %r %-5p [%F:%L] : %m%n" />
    </layout>
  </appender>
  <logger name="com.secondcar">
		<level value="info" />
		<appender-ref ref="secondcar" />
		<appender-ref ref="stdout" />
	</logger>
  <!-- 公共组件日志 -->
  <logger name="org.springframework" additivity="true">
    <level value="info" />
    <appender-ref ref="stdout" />
    <appender-ref ref="secondcar" />
  </logger>
  <logger name="org.apache" additivity="true">
    <level value="info" />
    <appender-ref ref="stdout" />
    <appender-ref ref="secondcar" />
  </logger>
  <logger name="freemarker" additivity="true">
    <level value="info" />
    <appender-ref ref="stdout" />
    <appender-ref ref="secondcar" />
  </logger>
  <logger name="catalia" additivity="true">
    <level value="info" />
    <appender-ref ref="stdout" />
    <appender-ref ref="secondcar" />
  </logger>
  <root>
    <priority value="info" />
    <appender-ref ref="secondcar" />
  </root>
</log4j:configuration>